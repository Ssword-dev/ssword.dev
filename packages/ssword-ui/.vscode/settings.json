{
  // Enable VSCode user snippets
  "editor.snippetSuggestions": "inline",
  // ESLint integration
  "eslint.enable": true,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  // Jest integration
  "jest.enable": true,
  "jest.runMode": "watch",
  // Night Owl theme recommendation
  "workbench.colorTheme": "Night Owl",
  // Extension recommendations
  "extensions.ignoreRecommendations": false,
  "extensions.recommendations": [
    "dbaeumer.vscode-eslint",
    "orta.vscode-jest",
    "sdras.night-owl"
  ],
}
