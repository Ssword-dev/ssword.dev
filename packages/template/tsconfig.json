{
  "compilerOptions": {
    "target": "es2016", // Target ECMAScript 2016
    "module": "commonjs", // Use CommonJS modules
    "esModuleInterop": true, // Enable interop for CommonJS modules
    "forceConsistentCasingInFileNames": true, // Enforce consistent casing in imports
    "strict": true, // Enable all strict type-checking options
    "skipLibCheck": true, // Skip type checking of declaration files
    "outDir": "./dist", // Output directory for compiled files
    "declarationDir": "./dist/types", // Output directory for declaration files
    "declaration": true, // Generate declaration files
    "sourceMap": true, // Generate source maps
    "resolveJsonModule": true, // Allow importing JSON files
    "rootDir": "./src" // Root directory of source files
  },
  "include": [
    "src/**/*"
  ], // Include all TypeScript files in the src folder
  "exclude": [
    "node_modules",
    "dist"
  ] // Exclude node_modules and output directory
}